<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewPoids"
                style="@style/LabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Poids" />

            <EditText
                android:id="@+id/editTextPoids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Entrez poids..."
                android:inputType="numberDecimal"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewTaille"
                style="@style/LabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="Taille" />

            <EditText
                android:id="@+id/editTextTaille"
                style="@style/TextboxStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Entrez taille..."
                android:inputType="numberDecimal" />

            <CheckBox
                android:id="@+id/checkBoxMF"
                style="@style/LabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:checked="true"
                android:gravity="left"
                android:text="Mega Fonction" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonMetre"
                    style="@style/LabelStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:gravity="left"
                    android:text="Metre" />

                <RadioButton
                    android:id="@+id/radioButtonCMetre"
                    style="@style/LabelStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Centimetre" />
            </RadioGroup>

            <Button
                android:id="@+id/buttonCalcul"
                style="@style/StyleButton"
                android:text="Caluler IMC" />

            <Button
                android:id="@+id/buttonRaz"
                style="@style/StyleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Remise Ã  Zero" />

            <TextView
                android:id="@+id/textViewRes"
                style="@style/LabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:text="Resultat :" />

            <TextView
                android:id="@+id/textViewResCal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#673AB7"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>